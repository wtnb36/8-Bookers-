<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages_for(:title).each do |message| %>
        <li><%= message %></li>
        <% end %>
  
        <% @book.errors.full_messages_for(:body).each do |message| %></br>
        <li><%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_field :body %>
  </div>
  
  <div class="actions"><%= f.submit 'Update Book' %></div>
<% end %>

